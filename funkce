function setLang(l) {
  document.getElementById("title").innerText = text[l].title;
  document.getElementById("subtitle").innerText = text[l].subtitle;
  document.getElementById("ecoTitle").innerText = text[l].economy;
  document.getElementById("ecoText").innerText = text[l].economyText;
  document.getElementById("docTitle").innerText = text[l].docs;
  document.getElementById("docText").innerText = text[l].docsText;
  document.getElementById("wepTitle").innerText = text[l].weapons;
  document.getElementById("wepText").innerText = text[l].weaponsText;
  document.getElementById("adminTitle").innerText = text[l].admin;
  document.getElementById("adminLabel").innerText = text[l].adminLogin;
}

/* ===== HASH OCHRANA ===== */
// SHA-256 hash hesla "ADMINOP"
const ADMIN_HASH = "5f78c3322f0cbb6f56bfa6f64cfd4b0cfdac3c6c69a6c8d4b0a2a5b0b1a7c5e2";

async function hash(text) {
  const data = new TextEncoder().encode(text);
  const hashBuffer = await crypto.subtle.digest("SHA-256", data);
  return Array.from(new Uint8Array(hashBuffer)).map(b => b.toString(16).padStart(2, "0")).join("");
}

async function unlockAdmin() {
  const input = document.getElementById("adminPass").value;
  const hashed = await hash(input);
  if (hashed === ADMIN_HASH) {
    document.getElementById("adminContent").style.display = "block";
    document.getElementById("adminLogin").style.display = "none";
  } else {
    alert("≈†patn√© heslo!");
  }
}
